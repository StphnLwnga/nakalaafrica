mixin loginForm()
	.well.well-sm
		form.form-horizontal(action="/admin/forot" method="POST")
			.form-group
				label.col-sm-3.control-label.hidden-xs(for="email") Email address
				.col-sm-9.col-xs-12
					.input-group
						span.input-group-addon@
						input.form-control(type="email" name="email" placeholder="✉")
			.form-group
				.col-sm-9.col-sm-offset-3.col-xs-12
					input.button(type="submit" value="Reset Password ▶")
