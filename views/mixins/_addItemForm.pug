mixin addItem()
	.well.well-sm
		form.form-horizontal(action="/admin/additem" method="POST")
			h3.text-center ADD NEW ITEM
			br
			h4.text-center Item Description
			.form-group
				label.col-sm-3.control-label.d-none.d-sm-block(for="itemName") Item Name
					.col-sm-9.col-xs-12
						.input-group
							span.input-group-addon @
							input.form-control(type="text" name="itemName" placeholder="Item Name")
			.form-group
				.col-sm-9.col-xs-12
					.form-check.form-check-inline
						- const categories = [ 'Accessories üß¢', 'Clothes üëï', 'Shoes üëû' ]
						each category in categories
							input.form-check-input(type="radio" name=`${category.toLowerCase()}` value=`${category})
							label.form-check-label(for=`${category.toLowerCase()}`) #{category}
			.form-group
				.col-sm-9.col-xs-12
					.form-check.form-check-inline
						- const genders = [ 'Men ', 'Women', 'None' ]
						each gender in genders
							input.form-check-input(type="radio" name=`${category.toLowerCase()}` value=`${category})
							label.form-check-label(for=`${category.toLowerCase()}`) #{category}
			.form-group
				label.col-sm-3.control-label.d-none.d-sm-block(for="description") Description
					.col-sm-9.col-xs-12
						.input-group
							span.input-group-addon.glyphicon.glyphicon-comment
							textarea.form-control(type="text" name="description" placeholder="Description üõç")
			.form-group
				label.col-sm-3.control-label.d-none.d-sm-block(for="price") Price
					.col-sm-9.col-xs-12
						.input-group
							span.input-group-addon @
							input.form-control(type="text" name="price" placeholder="Price üí∏")
			.form-group
				.col-sm-9.col-xs-12
